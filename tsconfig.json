{
  // See: https://www.npmjs.com/package/@tsconfig/node22
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",
  "compilerOptions": {
    "lib": [
      "es2023",
      "dom"
    ],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    // custom
    "sourceMap": true,
    "outDir": "./dist",
  },
  "include": [
    "./src/**/*.ts"
  ],
  "ts-node": {
    "swc": true
  }
}
